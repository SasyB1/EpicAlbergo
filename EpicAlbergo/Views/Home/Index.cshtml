@{
    ViewData["Title"] = "EpicAlbergo - Home";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4">Benvenuti a EpicAlbergo</h1>
        <p class="lead">Il tuo soggiorno di lusso nel cuore della città</p>
        <a class="btn btn-light btn-lg mb-2" href="/Reservation/RegisterReservation" role="button">Prenota Ora</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <img src="https://bamax.it/uploads/prodotti/thumb/BAMAX_ARREDAMENTO_CONTEMPORANEO_NOTTE_LETTO_SLASH_DETTAGLIO_18_1-1.jpg?1580400958" class="card-img-top" alt="Camere di Lusso">
                <div class="card-body">
                    <h5 class="card-title">Camere di Lusso</h5>
                    <p class="card-text">Goditi il massimo del comfort nelle nostre camere eleganti e spaziose.</p>
                    <a href="#" class="btn btn-primary w-100">Scopri di più</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://media-assets.vanityfair.it/photos/61b130282e634d794ba25db8/3:2/w_1080,h_720,c_limit/Preparazione_piatto_gourmet_Ristoranti_gourmet_del_Trentino_Alto_Adige-desktop.jpg" class="card-img-top" alt="Ristorante Gourmet">
                <div class="card-body">
                    <h5 class="card-title">Ristorante Gourmet</h5>
                    <p class="card-text">Assapora piatti deliziosi preparati dai nostri chef di fama mondiale.</p>
                    <a href="#" class="btn btn-primary w-100">Scopri di più</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://www.dimoraghirlandaio.it/wp-content/uploads/elementor/thumbs/dimora_ghirlandaio-spa_cover-7ausa88r6ns3yuvu1xp0m0syloi0kendi0ktowppy7m.jpg" class="card-img-top" alt="Centro Benessere">
                <div class="card-body">
                    <h5 class="card-title">Centro Benessere</h5>
                    <p class="card-text">Rilassati e rigenerati nel nostro esclusivo centro benessere.</p>
                    <a href="#" class="btn btn-primary w-100">Scopri di più</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2>Testimonianze</h2>
            <p class="lead">Cosa dicono i nostri ospiti</p>
        </div>
        <div class="col-md-4">
            <blockquote class="blockquote">
                <p class="mb-0">"Un'esperienza indimenticabile! Il servizio è stato impeccabile."</p>
                <footer class="blockquote-footer mt-2">Nello Rizzo</footer>
            </blockquote>
        </div>
        <div class="col-md-4">
            <blockquote class="blockquote">
                <p class="mb-0">"Le camere sono bellissime e il ristorante è eccezionale."</p>
                <footer class="blockquote-footer mt-2">Michele Arcangelo Tedesco</footer>
            </blockquote>
        </div>
        <div class="col-md-4">
            <blockquote class="blockquote">
                <p class="mb-0">"Il centro benessere è il posto perfetto per rilassarsi."</p>
                <footer class="blockquote-footer mt-2">Stefano Casasola</footer>
            </blockquote>
        </div>
    </div>
</div>

