@model EpicAlbergo.Models.Dto.CheckoutDto

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-4">@ViewData["Title"]</h1>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Reservation Details</h2>
                </div>
                <div class="card-body">
                    <p><strong>Customer Name:</strong> @Model.CustomerName @Model.CustomerSurname</p>
                    <p><strong>Reservation Number:</strong> @Model.Reservation.ReservationNumber</p>
                    <p><strong>Reservation Date:</strong> @Model.Reservation.ReservationDate.ToShortDateString()</p>
                    <p><strong>Start Stay Date:</strong> @Model.Reservation.ReservationStartStayDate.ToShortDateString()</p>
                    <p><strong>End Stay Date:</strong> @Model.Reservation.ReservationEndStayDate.ToShortDateString()</p>
                    <p><strong>Deposit:</strong> @Model.Reservation.ReservationDeposit.ToString("C")</p>
                    <p><strong>Price:</strong> @Model.Reservation.ReservationPrice.ToString("C")</p>
                    <p><strong>Room Number:</strong> @Model.Room.RoomNumber</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Services</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Service Type</th>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model.ReservationServices)
                            {
                                var total = service.ServiceQuantity * service.ServicePrice;
                                <tr>
                                    <td>@service.ServiceType</td>
                                    <td>@service.ServiceDate.ToShortDateString()</td>
                                    <td>@service.ServiceQuantity</td>
                                    <td>@service.ServicePrice.ToString("C")</td>
                                    <td>@total.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-body text-center">
                    <h3 class="mb-0">Total Price: @Model.TotalPrice.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>
</div>
